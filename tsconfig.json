{
  "compilerOptions": {
    "module": "Node16",
    "rootDir": "./src",
    "outDir": "./build",
    "esModuleInterop": false,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "moduleResolution": "Node16"
  },

  "exclude": [
    "node_modules",
    "vitest.config.ts",
    "src/local.mts",
    "src/docs/**",
    "src/**/*.test.ts"
  ]
}
